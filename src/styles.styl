body
  background-color: #232323
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif

.clock
  font-size: 32px
  font-weight: 100
  color: #eee
  position: fixed
  right: 40px
  top: 30px

  .c
    display: inline-block
    width: 18px
    text-align: center

.bookmarks
  position: fixed
  top: 100px
  left: 50px
  right: 50px
  bottom: 50px

  input
    background-color: transparent
    border: none
    display: block
    width: 100%
    font-size: 18px
    font-weight: 300
    outline: none
    color: #f5f5f5

  ul
    margin: 0
    padding: 0
    overflow: scroll
    height: 100%

    li
      display: block
      list-style: none
      background-color: rgba(#666, .1)
      font-size: 13px

      &:nth-of-type(2n)
        background-color: transparent

  a
    color: #cdcdcd
    display: flex
    text-decoration: none
    outline: none
    line-height: 1.6180339

    span
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 50%

      &.url
        text-align: right
        color: #666

    &:focus
      background: #f5f5f5
      color: #111

.hint
  display: block
  width: 100%
  font-size: 18px
  font-weight: 300
  outline: none
  color: #757575
  position: fixed
  top: 101px
  left: 51px
